<Alloy>
    <Widget id="drawer" src="nl.fokkezb.drawer">

        <Window module="xp.ui" role="leftWindow">
            <Label>I am left</Label>
        </Window>

        <NavigationWindow platform="ios" role="centerWindow">
            <Window>
                <LeftNavButton>
                    <Button onClick="toggle">Left</Button>
                </LeftNavButton>
                <Label>I am center</Label>
                
                <Widget src="nl.fokkezb.pullToRefresh" onRelease="memberListReload">
                    <ListView id="memberList" defaultItemTemplate="member">
                        <Templates>
                            <ItemTemplate bindId="member" name="member">
                                <Label bindId="name"/>
                            </ItemTemplate>
                        </Templates>
            
                        <ListSection id="section" dataCollection="members">
                            <!-- We need to add the ID of each model in the Collection
                            so that we can use it later to get a specific user by their ID -->
                            <ListItem template="member" member:id="{id}" name:text="{fullname}"/>
                        </ListSection>
                    </ListView>
                </Widget>
                    
                <RightNavButton>
                    <Button onClick="toggle">Right</Button>
                </RightNavButton>
            </Window>
        </NavigationWindow>
        
        <View platform="android" role="centerWindow">
            <Label>I am center</Label>
        </View>

        <Window module="xp.ui" role="rightWindow">
            <Label>I am right</Label>
        </Window>

    </Widget>
</Alloy>
